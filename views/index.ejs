<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        .form-div {
            margin-top: 20px;
            text-align: center;
        }
        
        .body-center {
            position: absolute;
            margin: auto;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            border-radius: 25px;
        }
    </style>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>

<body>
    <div class="text-center mb-4 form-div body-center">
        <form action="/" method="post" class="form-inline">
            <div class="form-group mx-sm-3 mb-2">
                <input type="text" name='query' id="query" class="form-control " placeholder="Ask Anything about me" required>

            </div>
            <button type="submit" class="btn btn-primary mb-2">Ask</button>


        </form>
        <%= reply %>
    </div>
    <script async src="https://cdn.splitbee.io/sb.js"></script>
</body>

</html>